@using MySapsApplication.Models.Suspects
@model List<CrimeRecordModel>

@{
    ViewData["Title"] = "Stats for Cases Page";
}



<h3 style="background-color: cadetblue; color: aliceblue; padding: 1%; font-size: 18px; text-transform: uppercase; font-weight: 400; border: 1px solid black;">
    Case Managers' Task Statistics
</h3>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr style="text-transform: uppercase; font-size: 18px;">
            <th>Statistics for Sam</th>
            <th>Statistics for Police Officer</th>
            <th>Total Cases</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><p>Cases belonging to Sam:</p></td>
            <td><p>Cases belonging to Police Officer:</p></td>
            <td><p>Total Cases:</p></td>
        </tr>
        <tr style="font-size:22px;">
            <td><p class="font-weight-bold">@ViewBag.SamCasesCount</p></td>
            <td><p class="font-weight-bold">@ViewBag.OfficerCasesCount</p></td>
            <td><p class="font-weight-bold">@ViewBag.TotalCasesCount</p></td>
        </tr>
    </tbody>
</table>

<footer style="background-color: skyblue; padding: 20px; text-align: center; position: relative; bottom: 0; width: 100%;">
    <p>&copy; 2024 Your Company Name. All Rights Reserved.</p>
</footer>
