@{
    ViewData["Title"] = " stats for cases Page";
}
@using MySapsApplication.Models.Suspects
@model List<CrimeRecordModel>



<br />
<nav style="background-color:cornflowerblue;padding:1%;">
    <div class="text-left">
        <h2 class="text-left" style="font-size:18px;color:aliceblue;text-transform:uppercase;padding:1%;">statistics of Types of crimes committed</h2>

    </div>
    <a asp-action="CasesStats" class="btn btn-primary" style="background-color:cornflowerblue;color:aliceblue;border:1px solid white;">Stats For Casemanager Tasks </a>
    <a asp-action="StatsCompletedCases" class="btn btn-primary" style="background-color:cornflowerblue;color:aliceblue;border:1px solid white;">Stats For Completed Cases </a>
  
</nav>
<br />
<div>

</div>
<table class="table table-striped table-bordered table-hover" style="border:1px solid cornflowerblue;">
    <thead class="thead-dark">
        <tr style="text-transform:uppercase;font-size:18px;background-color:cornflowerblue;color:aliceblue;border:1px solid white;">
            <th>Offence Type</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in ViewBag.OffenceStatistics)
        {
            <tr>
                <td>@stat.OffenceType</td>
                <td>@stat.Count</td>
            </tr>
        }
    </tbody>
</table>




@if (ViewBag.RemainingRecords != null)
{
    <div>
        <h3>Leftover Cases</h3>
        <ul>
            @foreach (var record in ViewBag.RemainingRecords)
            {
                <li>@record.Offence - @record.IssuedBy</li>
            }
        </ul>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
<footer style="background-color: skyblue; padding: 20px; text-align: center; position: relative; bottom: 0; width: 100%;">
