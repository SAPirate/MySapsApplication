
@{
    ViewData["Title"] = "AllRecords Page";
}

@model IEnumerable<MySapsApplication.Models.Suspects.Records>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr style="text-transform:uppercase;font-size:15px;">
            <td>case manager : sam records</td>
            <td>case manager : police officer records</td>
            <td>combined case managers records</td>
        </tr>
        <tr>
            <td><a asp-action="CaseManager1" class="btn btn-primary"> case manager : sam records</a></td>
            <td><a asp-action="CaseManager2" class="btn btn-primary">case manager : police officer records</a></td>
            <td><a asp-action="Record" class="btn btn-primary">Manager Dashboard</a></td>
        </tr>
    </thead>
</table>
<div class="text-center">
    <h1 class="display-4" style="color:darkslategray;font-size:30px;">Case Manager: Police Officer! Records</h1>

</div>
<div class="text-center">
    <br />



    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr style="text-transform:uppercase;font-size:15px;">
                <th>Id </th>
                <th>Suspect_No:</th>
                <th>Suspect_ID</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Offence</th>
                <th>Sentence</th>
                <th>IssuedAt</th>
                <th>IssuedBy</th>
                <th>IssueDate</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IndexModels.Id</td>
                    <td>@item.IndexModels.SuspectNo</td>
                    <td>@item.IndexModels.SuspectIdentity</td>
                    <td>@item.IndexModels.FirstName</td>
                    <td>@item.IndexModels.LastName</td>
                    <td>@item.CrimeRecordModel.Offence</td>
                    <td>@item.CrimeRecordModel.Sentence</td>
                    <td>@item.CrimeRecordModel.IssuedAt</td>
                    <td>@item.CrimeRecordModel.IssuedBy</td>
                    <td>@item.CrimeRecordModel.IssueDate</td>

                </tr>
            }
        </tbody>
    </table>
    <footer style="background-color: skyblue; padding: 20px; text-align: center; position: relative; bottom: 0; width: 100%;">
        <p>&copy; 2024 Your Company Name. All Rights Reserved.</p>
    </footer>
</div>

