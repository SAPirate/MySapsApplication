@using MySapsApplication.Models.Suspects

@{
    ViewData["Title"] = "Suspects Records Page";
}

@model List<CrimeRecordModel>


<div class="text-left card p-4" >
    <div class="text-center">
        <h2 class="text-center" style="background-color:lightskyblue;padding:1%;text-transform:capitalize;color:dimgray;font-size:20px;text-transform:uppercase;">registered suspects criminal records</h2>

    </div>
    <br />
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr style="text-transform:uppercase;font-size:15px;">
                <th>Id</th>
                <th>SuspectNo</th>
                <th>Offence</th>
                <th>Sentence</th>
                <th>IssuedAt</th>
                <th>IssuedBy</th>
                <th>IssueDate</th>
                <th>Edit</th>
            

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var CrimeRecordModel in Model)
                {
                    <tr>
                        <td>@CrimeRecordModel.Id</td>
                        <td>@CrimeRecordModel.SuspectNo</td>
                        <td>@CrimeRecordModel.Offence</td>
                        <td>@CrimeRecordModel.Sentence</td>
                        <td>@CrimeRecordModel.IssuedAt</td>
                        <td>@CrimeRecordModel.IssuedBy</td>
                        <td>@CrimeRecordModel.IssueDate</td>

                        <td><a asp-action="CrimeRecord" asp-route-id="@CrimeRecordModel.Id">Edit</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <form method="get" asp-action="IndexRecord">
            @if (Model.Count == 0)
            {
                <p class="text-danger fw-bolder fs-5 text-center">No Criminal Record Found For "@ViewData["GetRegistersDetails"]"</p>
                <div class="text-center">
                    <a asp-action="CrimeRecord" class="btn btn-primary">Register New Suspect Criminal Record </a>
                </div>
            }
          
        </form>
    </div>
    <footer style="background-color: skyblue; padding: 20px; text-align: center; position: relative; bottom: 0; width: 100%;">
        <p>&copy; 2024 Your Company Name. All Rights Reserved.</p>
    </footer>
</div>

